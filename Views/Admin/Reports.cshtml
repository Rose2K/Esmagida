@{
    ViewData["Title"] = "Raporlar";
    Layout = "_AdminLayout";
}

<div class="p-4">
    <h1 class="text-2xl font-bold mb-4">Raporlar</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
        <div class="bg-white p-4 rounded-lg shadow-md">
            <h2 class="font-bold text-lg mb-4">Satış Grafiği (Son 6 Ay)</h2>
            <div class="h-64 flex items-end space-x-2">
                <div class="w-1/6 bg-blue-500 rounded-t-md h-1/4 relative group">
                    <div class="opacity-0 group-hover:opacity-100 absolute bottom-full left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs rounded py-1 px-2 mb-1 transition-opacity">
                        Ocak: ₺25,450
                    </div>
                </div>
                <div class="w-1/6 bg-blue-500 rounded-t-md h-1/3 relative group">
                    <div class="opacity-0 group-hover:opacity-100 absolute bottom-full left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs rounded py-1 px-2 mb-1 transition-opacity">
                        Şubat: ₺33,240
                    </div>
                </div>
                <div class="w-1/6 bg-blue-500 rounded-t-md h-2/5 relative group">
                    <div class="opacity-0 group-hover:opacity-100 absolute bottom-full left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs rounded py-1 px-2 mb-1 transition-opacity">
                        Mart: ₺41,800
                    </div>
                </div>
                <div class="w-1/6 bg-blue-500 rounded-t-md h-1/2 relative group">
                    <div class="opacity-0 group-hover:opacity-100 absolute bottom-full left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs rounded py-1 px-2 mb-1 transition-opacity">
                        Nisan: ₺51,200
                    </div>
                </div>
                <div class="w-1/6 bg-blue-500 rounded-t-md h-3/5 relative group">
                    <div class="opacity-0 group-hover:opacity-100 absolute bottom-full left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs rounded py-1 px-2 mb-1 transition-opacity">
                        Mayıs: ₺62,700
                    </div>
                </div>
                <div class="w-1/6 bg-blue-500 rounded-t-md h-3/4 relative group">
                    <div class="opacity-0 group-hover:opacity-100 absolute bottom-full left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs rounded py-1 px-2 mb-1 transition-opacity">
                        Haziran: ₺78,450
                    </div>
                </div>
            </div>
            <div class="flex justify-between mt-2 text-xs text-gray-500">
                <span>Ocak</span>
                <span>Şubat</span>
                <span>Mart</span>
                <span>Nisan</span>
                <span>Mayıs</span>
                <span>Haziran</span>
            </div>
        </div>
        
        <div class="bg-white p-4 rounded-lg shadow-md">
            <h2 class="font-bold text-lg mb-4">Kategori Dağılımı</h2>
            <div class="h-64 flex items-center justify-center">
                <div class="relative w-48 h-48 rounded-full">
                    <div class="absolute inset-0 border-8 border-blue-500 rounded-full clip-pie" style="clip-path: polygon(50% 50%, 100% 0, 100% 100%); transform: rotate(45deg);"></div>
                    <div class="absolute inset-0 border-8 border-green-500 rounded-full clip-pie" style="clip-path: polygon(50% 50%, 0 0, 100% 0); transform: rotate(45deg);"></div>
                    <div class="absolute inset-0 border-8 border-purple-500 rounded-full clip-pie" style="clip-path: polygon(50% 50%, 0 0, 0 100%); transform: rotate(45deg);"></div>
                    <div class="absolute inset-0 border-8 border-yellow-500 rounded-full clip-pie" style="clip-path: polygon(50% 50%, 0 100%, 100% 100%); transform: rotate(45deg);"></div>
                </div>
            </div>
            <div class="flex flex-wrap justify-center mt-2 text-sm">
                <div class="flex items-center mr-4 mb-2">
                    <div class="w-3 h-3 bg-blue-500 mr-1"></div>
                    <span>Elektronik (35%)</span>
                </div>
                <div class="flex items-center mr-4 mb-2">
                    <div class="w-3 h-3 bg-green-500 mr-1"></div>
                    <span>Giyim (25%)</span>
                </div>
                <div class="flex items-center mr-4 mb-2">
                    <div class="w-3 h-3 bg-purple-500 mr-1"></div>
                    <span>Gıda (20%)</span>
                </div>
                <div class="flex items-center mb-2">
                    <div class="w-3 h-3 bg-yellow-500 mr-1"></div>
                    <span>Diğer (20%)</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="bg-white p-4 rounded-lg shadow-md mb-6">
        <h2 class="font-bold text-lg mb-4">En Çok Satan Ürünler</h2>
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ürün Adı</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kategori</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Satış Adedi</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Toplam Gelir</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">iPhone 14 Pro</td>
                    <td class="px-6 py-4 whitespace-nowrap">Elektronik</td>
                    <td class="px-6 py-4 whitespace-nowrap">124</td>
                    <td class="px-6 py-4 whitespace-nowrap">₺6,819,876</td>
                </tr>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">MacBook Pro</td>
                    <td class="px-6 py-4 whitespace-nowrap">Elektronik</td>
                    <td class="px-6 py-4 whitespace-nowrap">98</td>
                    <td class="px-6 py-4 whitespace-nowrap">₺7,153,902</td>
                </tr>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">Samsung Galaxy S23</td>
                    <td class="px-6 py-4 whitespace-nowrap">Elektronik</td>
                    <td class="px-6 py-4 whitespace-nowrap">87</td>
                    <td class="px-6 py-4 whitespace-nowrap">₺3,654,230</td>
                </tr>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">AirPods Pro</td>
                    <td class="px-6 py-4 whitespace-nowrap">Elektronik</td>
                    <td class="px-6 py-4 whitespace-nowrap">156</td>
                    <td class="px-6 py-4 whitespace-nowrap">₺1,092,540</td>
                </tr>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">Nike Air Max</td>
                    <td class="px-6 py-4 whitespace-nowrap">Giyim</td>
                    <td class="px-6 py-4 whitespace-nowrap">143</td>
                    <td class="px-6 py-4 whitespace-nowrap">₺428,570</td>
                </tr>
            </tbody>
        </table>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="bg-white p-4 rounded-lg shadow-md">
            <h2 class="font-bold text-lg mb-4">Müşteri Analizi</h2>
            <div class="space-y-4">
                <div>
                    <div class="flex justify-between mb-1">
                        <span class="text-sm">Yeni Müşteriler</span>
                        <span class="text-sm font-medium">45%</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="bg-blue-600 h-2 rounded-full" style="width: 45%"></div>
                    </div>
                </div>
                <div>
                    <div class="flex justify-between mb-1">
                        <span class="text-sm">Tekrar Eden Müşteriler</span>
                        <span class="text-sm font-medium">35%</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="bg-green-600 h-2 rounded-full" style="width: 35%"></div>
                    </div>
                </div>
                <div>
                    <div class="flex justify-between mb-1">
                        <span class="text-sm">VIP Müşteriler</span>
                        <span class="text-sm font-medium">20%</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="bg-purple-600 h-2 rounded-full" style="width: 20%"></div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="bg-white p-4 rounded-lg shadow-md">
            <h2 class="font-bold text-lg mb-4">Aylık Özet</h2>
            <div class="space-y-3">
                <div class="flex justify-between items-center">
                    <span>Toplam Satış</span>
                    <span class="font-medium">₺78,450</span>
                </div>
                <div class="flex justify-between items-center">
                    <span>Toplam Sipariş</span>
                    <span class="font-medium">256</span>
                </div>
                <div class="flex justify-between items-center">
                    <span>Ortalama Sipariş Değeri</span>
                    <span class="font-medium">₺306.4</span>
                </div>
                <div class="flex justify-between items-center">
                    <span>İade Oranı</span>
                    <span class="font-medium">3.2%</span>
                </div>
                <div class="flex justify-between items-center">
                    <span>Müşteri Memnuniyeti</span>
                    <span class="font-medium">4.8/5</span>
                </div>
            </div>
        </div>
    </div>
</div> 