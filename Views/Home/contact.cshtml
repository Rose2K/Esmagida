	@section Scripts {
		<script>
			function showPopup(type, message) {
				if (type === 'success') {
					$('#successPopup').fadeIn(300);
				} else {
					$('#errorMessage').text(message);
					$('#errorPopup').fadeIn(300);
				}
			}

			function closePopup() {
				$('.popup-overlay').fadeOut(300);
			}

			$(document).ready(function () {
				$("#template-contactform").submit(function (e) {
					e.preventDefault();
					
					var formData = {
						template_contactform_name: $("#template-contactform-name").val(),
						template_contactform_email: $("#template-contactform-email").val(),
						template_contactform_phone: $("#template-contactform-phone").val(),
						subject: $("#template-contactform-subject").val(),
						template_contactform_message: $("#template-contactform-message").val()
					};

					$.ajax({
						url: "/Contact/SendContactForm",
						type: "POST",
						data: formData,
						success: function (result) {
							if (result.success) {
								$("#template-contactform")[0].reset();
								showPopup('success');
							} else {
								showPopup('error', result.message);
							}
						},
						error: function (error) {
							showPopup('error', 'Mesaj gönderilirken bir hata oluştu. Lütfen tekrar deneyin.');
						}
					});
				});
			});
		</script>
	}

